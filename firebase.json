{
    "hosting": [
      {
        "target": "stage",
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "trailingSlash": false,
        "headers": [
          {
            "source" : "**/*.@(jpg|jpeg|gif|png|svg|css|js)",
            "headers" : [ {
                "key" : "Cache-Control",
                "value" : "max-age=31536000"
            } ]
          }
        ]
      },
      {
        "target": "prod",
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "trailingSlash": false,
        "headers": [
          {
            "source" : "**/*.@(jpg|jpeg|gif|png|svg|css|js)",
            "headers" : [ {
                "key" : "Cache-Control",
                "value" : "max-age=31536000"
            } ]
          }
        ]
      }
    ]
  }